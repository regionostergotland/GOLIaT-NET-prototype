<!DOCTYPE html>
<!--
This is a starter template page for creating web Desktop/Mobile applications at Region Östergörland

 Help Site: "not all the 3'party components are validated so please ask the Team members if you like to include one"
    https:// almsaeedstudio.com/themes/AdminLTE/documentation/index.html
-->

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.PageApplicationName - @ViewBag.PageHeader</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Operationsplanerare - GOLIAT">

    <!-- Bootstrap 3.3.5 -->
    @Styles.Render("~/Content/bootstrap")

    <!-- Theme style -->
    @Styles.Render("~/Content/admin")
    @RenderSection("AddToHead", required: false)
    @Styles.Render("~/Content/css")

    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 2.1.4 -->
    @Scripts.Render("~/bundles/before_jquery")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/after_jquery")

    <!-- Bootstrap 3.3.5 -->
    @Scripts.Render("~/bundles/bootstrap")

    <!-- AdminLTE App -->
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/AdminLTE/app.js")

    @Scripts.Render("~/Scripts/AdminLTE/customGlobalScript.js")

    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. Slimscroll is required when using the
         fixed layout. -->
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->

    <script>
    function toggleRole() {
        if ('@HttpContext.Current.Session["ROLE"]' == "Ledning") {
            window.location = "?Role=Kirurg";
        }
        else if ('@HttpContext.Current.Session["ROLE"]' == "Kirurg") {
            window.location = "?Role=Ledning";
        }
    }
</script>
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         |                                         |
|               | skin-RO  Region Östergötland            |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|

-->
<body class="hold-transition @ViewBag.PageLayoutSkin @ViewBag.PageLayoutOption">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <div class="logo">
                <div class="ROMenuPhone">
                    <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button"></a>

                    <div class="logoROPhone">
                        <!-- mini logo for sidebar mini 50x50 pixels -->
                        <span class="logo-mini"><i class="@ViewBag.PageApplicationIcon"></i></span>
                        <!-- logo for regular state and mobile devices -->
                        <span class="logo-lg"> <i class="@ViewBag.PageApplicationIcon"></i>&nbsp;<b>&nbsp;@ViewBag.PageApplicationName</b></span>
                    </div>

                </div>
            </div>

            <nav class="navbar navbar-static-top" role="navigation">
                <div class="navbar-custom-menu-left">
                    <a href="" class="logoROTabDesc">
                        <!-- mini logo for sidebar mini 50x50 pixels -->
                        <!-- logo for regular state and mobile devices -->
                        <i class="@ViewBag.PageApplicationIcon"></i>&nbsp;<b2>&nbsp;@ViewBag.PageApplicationName</b2>
                    </a>
                </div>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    @RenderPage("~/Views/Shared/NotificationsAndSearchPartial.cshtml")
                </div>
            </nav>

        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @if (!(ViewBag.PageUserName == null && ViewBag.PageUserSign == null))
                {
                    <div class="user-panel">
                        <div class="pull-left image">
                            <i class="fa fa-user fa-3x"></i>
                        </div>
                        <div class="pull-left info">
                            <small>
                                @*<p>@ViewBag.PageUserName</p>*@
                                <p>@ViewBag.PageUserSign</p>
                                <span><b>Roll: </b><button onclick="toggleRole()" class="btn btn-success"> @HttpContext.Current.Session["ROLE"] </button> </span>
                            </small>
                        </div>
                    </div>
                }
                @RenderPage("~/Views/Shared/SideMenuPartial.cshtml")
            </section>

            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @if (ViewBag.PageHeader != null)
            {
                <section class="content-header">
                    <h1>
                        @ViewBag.PageHeader
                        @if (@HttpContext.Current.Session["ROLE"].ToString() == "Kirurg")
                        {
                            <small>@ViewBag.SubPageHeader</small>
                        }
                    </h1>

                    

                    @if (ViewBag.PageLevel != null)
                    {
                        <ol class="breadcrumb">
                            <li><a href="@ViewBag.PageLevelUrl"><i class="fa fa-road"></i> @ViewBag.PageLevel</a></li>
                            <li class="active">@ViewBag.PageSubLevel</li>
                        </ol>
                    }
                </section>
            }
            <!-- Main content -->
            <section class="content">
                <!-- Page Content Here -->
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="main-footer-logo-RO">
                <!-- To the right -->
                <div class="logo-RO-left">
                    <img height="40px" src="~/Content/RO_Logo/RO_Logo.png" />
                </div>

                @RenderPage("~/Views/Shared/FooterPartial.cshtml")
            </div>
        </footer>
        <!-- Control Sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->
</body>
</html>
