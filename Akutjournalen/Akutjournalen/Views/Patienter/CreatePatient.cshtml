@{
    ViewBag.Title = "Skapa Patient";
    ViewBag.PageHeader = "Skapa Patient";
    ViewBag.SubPageHeader = "Urologkliniken";
}
<script type="text/javascript" src="https://cdn.jsdelivr.net/bluebird/latest/bluebird.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Views/Patienter/createpatienter.js"></script>

<style>
    #form-container {
        margin-top: 50px;
        background-color: #D9D9D9;
        padding-top: 15px;
        padding-bottom: 15px;
        padding-left: 15px;
        padding-right: 15px;
    }

    #form-top-row {
        margin-bottom: 30px;
        color: #808080;
    }

    label {
        display: inline-block;
        clear: left;
        width: 100px;
        text-align: right;
        padding-right: 150px;
    }

    input {
        display: inline-block;
    }

    #confirm-div {
        padding-top: 7%;
    }

    #create-utredning-div {
        padding-top: 7%;
        clear: both;
    }
</style>

<div id="form-container" ng-app="myApp3">

    <div class="form-group " ng-controller="PatientFormController">
        <div class="form-inline" id="personnumber-div">
            <label for="personnumber">Personnummer: </label> <input type="text" ng-model="patient.persnummer" class="form-control" id="personnumber" placeholder="YYYYMMDD-NNNN" />
        </div>
        <div class="form-inline" id="firstname-div">
            <label for="firstname">Namn </label> <input type="text" ng-model="patient.firstname" class="form-control" id="firstname" placeholder="Förnamn Andranamn" />
        </div>
        <div class="form-inline" id="lastname-div">
            <label for="lastname">Efternamn: </label> <input type="text" ng-model="patient.lastname" class="form-control" id="lastname" placeholder="Efternamn" />
        </div>
        <div class="form-inline" id="gender-div">
            <label for="gender">Kön: </label> <input type="text" ng-model="patient.gender" class="form-control" id="gender" placeholder="Kön" />
        </div>
        <div class="form-inline" id="dateofbirth-div">
            <label for="dateofbirth">Födelsedatum: </label> <input type="datetime-local" ng-model="patient.dateofbirth" class="form-control" id="dateofbirth" />
        </div>
        <br />
        <div class="form-inline" id="create-utredning-div">
            <button type="submit" class="btn btn-success" id="create-utredning-button" ng-click="CreatePatient(patient)">Skapa Patient</button>
        </div>
    </div>

</div>  
