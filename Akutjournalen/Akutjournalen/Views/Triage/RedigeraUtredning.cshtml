@{
    ViewBag.Title = "Redigera utredning";
    ViewBag.PageHeader = "Redigera utredning";
    ViewBag.SubPageHeader = "Urologkliniken";
}


<style>
    #form-container {
        margin-top: 50px;
        background-color: #D9D9D9;
        padding-top: 15px;
        padding-bottom: 15px;
        padding-left: 15px;
        padding-right: 15px;
    }

    #form-top-row {
        margin-bottom: 30px;
        color: #808080;
    }

    label {
        display: inline-block;
        clear: left;
        width: 100px;
        text-align: right;
        padding-right: 150px;
    }

    input {
        display: inline-block;
    }

    #confirm-div {
        padding-top: 7%;
    }

    #create-utredning-div {
        padding-top: 7%;
        clear: both;
    }
</style>

<div id="form-container">
    <div id="form-top-row">
        <p><b>Behandling:</b> Prostatacancer</p>
    </div>

    <div class="form-group ">
        <div class="form-inline" id="personnumber-div">
            <label for="personnumber">Personnummer*: </label> <input type="text" class="form-control" id="personnumber" placeholder="YYYYMMDD-NNNN" />
        </div>
        <div class="form-inline" id="firstname-div">
            <label for="firstname">Namn* </label> <input type="text" class="form-control" id="firstname" placeholder="Förnamn Andranamn" />
        </div>
        <div class="form-inline" id="lastname-div">
            <label for="lastname">Efternamn*: </label> <input type="text" class="form-control" id="lastname" placeholder="Efternamn" />
        </div>
        <br />
        <div class="form-inline" id="huvuddiagnos-div">
            <label for="huvuddiagnos">Huvuddiagnos: </label> <input type="text" class="form-control" id="huvuddiagnos" placeholder="ICD-10 kod" />
        </div>
        <div id="confirm-div">
            <p id="diagnos-confirmation"></p><button type="button" class="btn btn-default" id="confirm-button" disabled>Bekräfta diagnos</button>
        </div>
        <div class="form-inline" id="create-utredning-div">
            <button type="button" class="btn btn-success" id="create-utredning-button" disabled>Skapa utredning</button>
        </div>
    </div>

</div>  